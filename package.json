{
  "name": "@mmts/root",
  "private": true,
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/NicolasRonsmans/monorepo-multipackages-ts.git"
  },
  "license": "MIT",
  "author": "NicolasRonsmans <ronsmans.nicolas@gmail.com>",
  "scripts": {
    "clean": "npx rimraf -r **/node_modules packages/**/build **/*.tsbuildinfo",
    "compile": "ttsc --build ./packages/tsconfig.refs.json --force",
    "compile:watch": "yarn run compile --watch",
    "build:cra": "yarn run compile && yarn workspace @mmts/cra build",
    "start:cra": "yarn compile && concurrently 'yarn compile:watch' 'yarn workspace @mmts/cra start'",
    "lint": "yarn workspaces run lint",
    "test": "yarn workspaces run test"
  },
  "workspaces": {
    "packages": [
      "apps/cra",
      "packages/*"
    ]
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.9.0",
    "@testing-library/react": "^10.2.1",
    "@types/node": "^14.0.13",
    "@typescript-eslint/eslint-plugin": "^3.2.0",
    "@typescript-eslint/parser": "^3.2.0",
    "@zerollup/ts-transform-paths": "^1.7.15",
    "concurrently": "^5.1.0",
    "eslint": "^6.6.0",
    "eslint-plugin-react": "^7.20.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.9",
    "prettier": "^2.0.5",
    "prettier-check": "^2.0.0",
    "ts-jest": "^26.1.0",
    "ttypescript": "^1.5.10",
    "typescript": "^3.9.5"
  }
}
