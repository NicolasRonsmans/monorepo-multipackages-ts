{
  "name": "@mmts/root",
  "private": true,
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/NicolasRonsmans/monorepo-multipackages-ts.git"
  },
  "license": "MIT",
  "author": "NicolasRonsmans <ronsmans.nicolas@gmail.com>",
  "scripts": {
    "clean": "rimraf -r **/node_modules **/build **/*.tsbuildinfo",
    "compile": "ttsc --build ./packages/tsconfig.refs.json --force",
    "compile:watch": "yarn run compile --watch",
    "build": "yarn run compile && yarn workspace @mmts/cra build",
    "start": "yarn compile && concurrently 'yarn compile:watch' 'PORT=3001 yarn workspace @mmts/cra start'"
  },
  "workspaces": {
    "packages": [
      "apps/cra",
      "packages/*"
    ]
  },
  "dependencies": {
    "@types/node": "^14.0.13",
    "@zerollup/ts-transform-paths": "^1.7.15",
    "concurrently": "^5.1.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-patch": "^1.0.7",
    "ttypescript": "^1.5.10",
    "typescript": "^3.8.3"
  }
}
